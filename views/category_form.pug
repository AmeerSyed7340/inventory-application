extends layout 

block content 
    h1 #{title}

    form(method='POST')
        div.form-group
            label(for='name') Category
            input#name.form-control(type='text', placeholder='Fruit, Vegetable etc.' name='name' required value =(undefined===category? '' : category.name))

        div.form-group
            label(for='description') Description 
            input#description.form-control(type='text', placeholder='How it looks. Where it grows. etc' name='description' required value =(undefined===description? '' : description.description))
        button.btn.btn-primary(type='submit') Submit

    if errors
        ul
            for error in errors
                li!= error.msg