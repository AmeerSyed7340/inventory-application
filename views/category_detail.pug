extends layout 

block content 
    h1 #{title}

    div(style='margin-left:20px;margin-top:20px')

        h4 Items
        if category_items.length
            dl
                each item in category_items
                    dt
                        a(#href=item.url) #{item.name}
                    dd #{item.summary}
        else
            p This category has no items