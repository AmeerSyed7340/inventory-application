extends layout

block content
  h1= title

  form(method='POST')
    div.form-group
      label(for='name') Name:
      input#name.form-control(type='text', placeholder='Name of item' name='name' required value=(undefined===item ? '' : item.name) )

    div.form-group
      label(for='description') Description:
      input#description.form-control(type='text', placeholder='Description of item' name='description' required value=(undefined===item ? '' : item.description) )

    div.form-group
      label(for='price') Price:
      input#price.form-control(type='number', step="0.01", placeholder='Price of item' name='price' required value=(undefined===item ? '' : item.price) )

    div.form-group
      label(for='number_in_stock') In Stock:
      input#number_in_stock.form-control(type='number', placeholder='Enter a number for: In stock' name='number_in_stock' required value=(undefined===item ? '' : item.number_in_stock) )

    div.form-group
      label Category:
      div
        for category in categories
          div(style='display: inline; padding-right:10px;')
            if category.checked
              input.checkbox-input(type='checkbox', name='category', id=category._id, value=category._id, checked)
            else
              input.checkbox-input(type='checkbox', name='category', id=category._id, value=category._id)
            label(for=category._id) &nbsp;#{category.name}
    button.btn.btn-primary(type='submit') Submit

  if errors
    ul
      for error in errors
        li!= error.msg